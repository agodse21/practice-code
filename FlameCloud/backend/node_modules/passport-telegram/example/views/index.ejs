<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Telegram Passport</title>
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Telegram Passport</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <%if (! user) { %>
                                <a href="/login">Login</a>
                            <% } else { %>
                                <a href="/logout">Logout</a>
                            <% } %>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <div class="<%if (! user) { %> col-md-4 col-md-offset-4 <% } else {%> col-md-8 col-md-offset-2 <% } %>">
                    <div class="panel <%if (! errors) { %> panel-default <% } else { %> panel-danger <% } %>">

                        <%if (! user) { %>

                            <div class="panel-heading">
                                <%if (! errors) { %>
                                    Please log in
                                <% } else { %>
                                    Attempt unsuccesful
                                <% } %>  
                            </div>
                            <div class="panel-body">
                                <a class="btn btn-primary btn-lg btn-block" href="/login/telegram">
                                    <i class="fa fa-btn fa-paper-plane"></i> Login with Telegram
                                </a>
                            </div>

                        <% } else { %>

                            <div class="panel-heading">
                                Logged in!
                            </div>
                            <div class="panel-body">
                                <h1>Hello, <%= user.first_name %></h1>
                                <table class="table">
                                    <% for (var key in user) { %>
                                       <tr>
                                            <td><strong><%= key %></strong></td>
                                            <td><%= (user[key] || 'null') %></td>
                                       </tr>
                                    <% } %>
                                </table>
                                <pre><%= JSON.stringify(user, null, 2) %></pre>
                            </div>

                        <% } %>
                    
                    </div>
                </div>
            </div>
        </div>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" integrity="sha384-XdYbMnZ/QjLh6iI4ogqCTaIjrFk87ip+ekIjefZch0Y+PvJ8CDYtEs1ipDmPorQ+" crossorigin="anonymous">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        
        <style type="text/css">
            body {
                font-family: 'Lato';
            }
            .fa-btn {
                margin-right: 6px;
            }
            h1 {
                margin-top: 10px;
            }
            .table {
                margin-top: 30px;
                display: block;
                overflow: hidden;
            }
            .panel-heading {
                font-weight: 600;
            }
        </style>
    </body>
</html>
